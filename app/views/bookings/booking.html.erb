<div class="body">
<div class="container">

  <%= simple_form_for (:bookings) do |f| %>
   <div class="row justify-content-center">
     <div class="col-8">
      <h1>Booking</h1>
      <h5><%= t("Name")%></h5>
      <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>

      <h5><%= t("Email")%></h5>
      <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

      <h5><%= t("Starting_date")%></h5>
      <%= f.date_select :start_date%><br>
      <h5><%= t("End_date")%></h5>
      <%= f.date_select :end_date%>
        <br>
        <br>

      <h5><%= t("Message")%></h5>
      <%= f.text_area :message, rows: 6, cols: 30, required: true, class: "contact-form-text-area",
            placeholder: "Send me a message"%></br>
      <%= f.submit 'Send Message', class: 'btn btn-primary' %>

  <% end %>
  </div>
</div>
</div>
</div>
