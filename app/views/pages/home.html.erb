        <br>
        <br>

      <h6><%= t("Message")%></h6>
      <%= f.text_area :message, rows: 10, cols: 32, required: true, class: "contact-form-text-area flex",
            placeholder: "Write_a_message"%></br>
      <%= f.submit 'Send Message', class: 'btn btn-primary' %>

  <% end %>
